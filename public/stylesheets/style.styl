textColor = #0f0
backgroundColor = #000

opacity(value)
  opacity: value
  -moz-opacity: value
  filter: unquote('alpha(opacity=' + round(value * 100) + ')')

border-radius(value)
  border-radius: value
  -moz-border-radius: value

.container
  position: relative

.translucentFrame
  background: textColor
  opacity: .1
  position: absolute
  top: 0
  left: 0
  width: 100%
  height: 100%
  z-index: 1
  border-radius: 5px

.contentFrame
  position: relative
  z-index: 2

body
  background: backgroundColor
  color: textColor
  font-size: 15px
  font-family: Consolas

#frame
  position: relative
  margin: 15px auto auto auto
  width: 90%

.backgroundImage
  top: 0
  left: 0
  width: 100%
  height: 100%
  position: fixed
  z-index: 0
  opacity: .15

#banner
  text-align: center
  font-size: 55px
  padding: 15px
  font-family: Courier New
  border-bottom: solid 1px darken(textColor, 50%)

#content
  padding: 15px

a, a:visited
  color: lighten(textColor, 75%)
  text-decoration: none

a:hover
  text-decoration: underline