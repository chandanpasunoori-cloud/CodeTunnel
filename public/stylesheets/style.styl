mainColor = hsl(120, 90%, 60%)
colorChangeSpeed = 1.5s

opacity(value)
  opacity: value
  -moz-opacity: value
  filter: unquote('alpha(opacity=' + round(value * 100) + ')')

transition()
  -webkit-transition: arguments
  -moz-transition: arguments
  -o-transition: arguments
  transition: arguments

border-radius(value)
  border-radius: value
  -moz-border-radius: value

.container
  position: relative

.translucentFrame
  background: mainColor
  opacity: .1
  position: absolute
  top: 0
  left: 0
  width: 100%
  height: 100%
  z-index: 1
  border-radius: 10px
  transition: background-color colorChangeSpeed linear

.contentFrame
  position: relative
  z-index: 2

body
  background: #000;//darken(mainColor, 97%)
  color: lighten(mainColor, 55%)
  font-size: 15px
  font-family: Consolas
  transition: color colorChangeSpeed linear, background-color colorChangeSpeed linear

#frame
  position: relative
  margin: 15px auto auto auto
  width: 900px

.backgroundImage
  top: 0
  left: 0
  width: 100%
  height: 100%
  position: fixed
  z-index: 0
  opacity: .05

#banner
  text-align: center
  font-size: 55px
  padding: 15px
  font-family: Courier New
  border-bottom: solid 1px darken(mainColor, 65%)
  transition: border-color colorChangeSpeed linear

#navigation
  margin: 0
  padding: 15px
  li
    display: inline
    margin-right: 15px

#content
  padding: 15px

a, a:visited
  color: lighten(mainColor, 85%)
  text-decoration: none
  transition: color colorChangeSpeed linear
a:hover
  text-decoration: underline

.postSummary
  padding: 10px
  margin-bottom: 15px

.pageControls
  margin-bottom: 15px

.right
  float: right

