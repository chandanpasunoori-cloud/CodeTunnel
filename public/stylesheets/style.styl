colors = 150 180 210 240 270 300 330 0 30 60 90 120

for hue, index in colors
  color = hsl(hue, 100%, 75%)
  .bodyColor{index}
    color: color !important
    background-color: darken(color, 97%) !important
  .borderColor{index}
    border-color: darken(color, 65%) !important
  .linkColor{index}, .linkColor{index}:visited
    color: lighten(color, 60%) !important
  .containerColor{index}
    background-color: color !important
