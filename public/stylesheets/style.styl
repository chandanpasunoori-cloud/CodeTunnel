mainColor = hsl(120, 90%, 60%)
colorChangeSpeed = .3s

opacity(value)
  opacity: value
  -moz-opacity: value
  filter: unquote('alpha(opacity=' + round(value * 100) + ')')

transition()
  -webkit-transition: arguments
  -moz-transition: arguments
  -o-transition: arguments
  transition: arguments

border-radius(value)
  border-radius: value
  -moz-border-radius: value

.container
  position: relative

.translucentFrame
  background: mainColor
  opacity: .20
  position: absolute
  top: 0
  left: 0
  width: 100%
  height: 100%
  z-index: 1
  border-radius: 10px
  transition: background-color colorChangeSpeed linear

.contentFrame
  position: relative
  z-index: 2

body
  background: #000;//darken(mainColor, 97%)
  color: lighten(mainColor, 55%)
  font-size: 15px
  font-family: Consolas
  transition: color colorChangeSpeed linear, background-color colorChangeSpeed linear

#frame
  position: relative
  margin: 15px auto auto auto
  width: 900px

.backgroundImage
  top: 0
  left: 0
  width: 100%
  height: 100%
  position: fixed
  z-index: 0
  opacity: .075

.profilePicture
  width: 50px
  margin-left: 10px
  float: right

#banner
  text-align: center
  font-size: 55px
  padding: 15px
  font-family: Courier New
  border-bottom: solid 1px darken(mainColor, 55%)
  transition: border-color colorChangeSpeed linear

#navigation
  margin: 0
  padding: 15px
  li
    display: inline
  li.nav
    margin-right: 35px

#content
  clear: both
  padding: 15px
  overflow-x: auto

input, textarea
  background: transparent
  border: dotted 1px darken(mainColor, 65%)
  border-radius: 5px
  padding: 10px
  color: lighten(mainColor, 55%)


a, a:visited
  color: lighten(mainColor, 85%)
  text-decoration: none
  transition: color colorChangeSpeed linear
a:hover
  text-decoration: underline

.postTitle
  font-size: 20px
.postDate
  font-style: italic
  font-size: 13px
.managePost
  font-size: 13px

.postSummary
  padding: 10px
  margin-bottom: 15px

.pageControls
  clear: both
  margin-bottom: 15px
  .pageLink
    margin-right: 10px

.right
  float: right
  text-align: right

.button
  padding: 3px 5px 3px 5px
  color: darken(mainColor, 75%) !important
  background-color: lighten(mainColor, 25%)
  border-radius: 5px
  transition: background-color colorChangeSpeed linear
  cursor: pointer

.button:hover
  background-color: darken(mainColor, 50%)
  color: lighten(mainColor, 85%) !important
  text-decoration: none

